# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
# Text is UTF-8
charset = utf-8
# Unix-style newlines
end_of_line = lf
# Newline ending every file
insert_final_newline = true
# Soft tabs
indent_style = space
# Two-space indentation
indent_size = 2
# Trim trailing whitespace
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,py,html,css,scss,yaml,yml,json,md,mdx}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
